<!DOCTYPE html>
<html>
  <head>
    <title>Petfeeder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav>

    <button><%= link_to "Pets", pets_path %></button>
    <% if user_signed_in? %>
      <%= form_tag(destroy_user_session_path, method: :delete, style: 'display: inline-block;') do %>
        <%= submit_tag "Sign Out" %>
      <% end %>
    <% else %>
      <button><%= link_to('Sign Up', new_user_registration_path) %></button> 
      <button><%= link_to('Login', new_user_session_path) %></button> 
    <% end %>

  </nav>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
